<h2 class="page-header">All Todos</h2>

<table class="table table-striped">

  <tr>
    <th>Check</th>
    <th>Title</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>

  <% @todo_items.each do |todo| %>
    <tr>
      <td>
        <%= check_box_tag "completed", "1", todo.completed, :class => 'regular-checkbox' %>
        <%= label :completed, "completed", raw("&nbsp;") %>
      </td>
      <td>
        <%= link_to todo.title, todo %>
      </td>
      <td>
        <%= link_to raw('<i class="icon-pencil"></i>'), edit_todo_item_path(todo), :class => "btn" %>
      </td>
      <td>
        <%= link_to raw('<i class="icon-white icon-trash"></i>'), todo, :method => :delete, :class => "btn btn-danger" %>
      </td>
    </tr>
  <% end %>

</table>